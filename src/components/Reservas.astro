<section class="max-w-5xl w-full bg-white py-12 p-8 mx-auto mt-5">
    <h2 class="text-2xl font-bold text-gray-900 mb-2 text-center md:text-left">
        Haz tu reserva rápida y segura.
    </h2>
    <p class="text-gray-600 mb-6 text-center md:text-left">
        Selecciona tu aventura, indica tus fechas, completa tus datos y nuestro
        equipo de atención al cliente estará siempre disponible para ayudarte.
        ¡Reserva ahora y vive una aventura inolvidable en Iquitos!
    </p>

    <form class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label for="nombres" class="block text-gray-700 font-semibold mb-1">
                Nombres y Apellidos
            </label>
            <input
                type="text"
                id="nombres"
                name="nombres"
                placeholder="Ingresa tus datos..."
                class="w-full px-4 py-2 border border-green-900 focus:border-orange-400 focus:outline focus:outline-orange-700 rounded-md bg-gray-50"
            />
        </div>

        <div>
            <label
                for="programaSelect"
                class="block text-gray-700 font-semibold mb-1"
            >
                Programa
            </label>
            <select
                id="programaSelect"
                name="programaSelect"
                class="w-full px-4 py-2 border border-green-900 focus:border-orange-400 focus:outline focus:outline-orange-700 rounded-md bg-gray-50 appearance-none pr-10 bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2024%2024%22%20stroke-width%3D%221.5%22%20stroke%3D%22%2314532d%22%3E%3Cpath%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20d%3D%22m19.5%208.25-7.5%207.5-7.5-7.5%22%2F%3E%3C%2Fsvg%3E')] bg-[length:1.25rem] bg-no-repeat bg-[position:right_1rem_center]"
            >
                <option value=""> Selecciona un programa </option>
            </select>
        </div>

        <div>
            <label
                for="actividadSelect"
                class="block text-gray-700 font-semibold mb-1"
            >
                Actividad
            </label>
            <select
                id="actividadSelect"
                name="actividadSelect"
                class="w-full px-4 py-2 border border-green-900 focus:border-orange-400 focus:outline focus:outline-orange-700 rounded-md bg-gray-50 appearance-none pr-10 bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2024%2024%22%20stroke-width%3D%221.5%22%20stroke%3D%22%2314532d%22%3E%3Cpath%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20d%3D%22m19.5%208.25-7.5%207.5-7.5-7.5%22%2F%3E%3C%2Fsvg%3E')] bg-[length:1.25rem] bg-no-repeat bg-[position:right_1rem_center]"
                disabled
            >
                <option value=""> Selecciona una actividad </option>
            </select>
        </div>

        <div>
            <label
                for="fechaIngreso"
                class="block text-gray-700 font-semibold mb-1"
            >
                Fecha de Inicio
            </label>
            <input
                type="date"
                id="fechaIngreso"
                name="fechaIngreso"
                class="w-full px-4 py-2 border border-green-900 focus:border-orange-400 focus:outline focus:outline-orange-700 rounded-md bg-gray-50"
            />
        </div>

        <div>
            <label
                for="fechaSalida"
                class="block text-gray-700 font-semibold mb-1"
            >
                Fecha de Fin
            </label>
            <input
                type="date"
                id="fechaSalida"
                name="fechaSalida"
                class="w-full px-4 py-2 border border-green-900 focus:border-orange-400 focus:outline focus:outline-orange-700 rounded-md bg-gray-50"
            />
        </div>

        <div class="md:col-span-2">
            <button
                type="submit"
                id="consultarBtn"
                class="w-full bg-green-800 hover:bg-green-900 text-white py-3 rounded-md font-semibold flex items-center justify-center cursor-pointer"
                aria-label="Consultar paquete"
            >
                Consultar Ahora
                <i class="fa-brands fa-whatsapp ml-1"></i>
            </button>
        </div>
    </form>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const programas = [
            {
                id: "1",
                nombre: "Irapay Amazon",
                actividades: [
                    { id: "101", nombre: "Iquitos Relax (3D/2N)" },
                    { id: "102", nombre: "Explorando Amazonas (4D/3N)" },
                    { id: "103", nombre: "Iquitos de Aventura (5D/4N)" },
                ],
            },
            {
                id: "2",
                nombre: "Heliconia Lodge",
                actividades: [
                    { id: "201", nombre: "Inolvidable Río Amazonas (3D/2N)" },
                    {
                        id: "202",
                        nombre: "Descubre las Maravillas de la Amazonía (5D/4N)",
                    },
                    {
                        id: "203",
                        nombre: "Culturas y Aventura en la Selva (4D/3N)",
                    },
                ],
            },
            {
                id: "3",
                nombre: "Cumaceba Lodge",
                actividades: [
                    { id: "301", nombre: "Cumaceba Lodge (3D/2N)" },
                    { id: "302", nombre: "Cumaceba Lodge (4D/3N)" },
                    { id: "303", nombre: "Cumaceba Lodge (5D/4N)" },
                ],
            },
            {
                id: "4",
                nombre: "Pacaya Samiria",
                actividades: [
                    {
                        id: "401",
                        nombre: "Tours Reserva Nacional Pacaya Samiria (3D/2N) - Desde Yurimaguas",
                    },
                    {
                        id: "402",
                        nombre: "Tours Reserva Nacional Pacaya Samiria (4D/3N) - Desde Iquitos",
                    },
                    {
                        id: "403",
                        nombre: "Expedición Pacaya Samiria (5D/4N) - Desde Iquitos",
                    },
                    {
                        id: "404",
                        nombre: "Tours Reserva Nacional Pacaya Samiria (6D/5N) - Desde Yurimaguas",
                    },
                    {
                        id: "405",
                        nombre: "Tours Pacaya Samiria (8D/7N) - Desde Tarapoto",
                    },
                ],
            },
            {
                id: "5",
                nombre: "Tours Diarios",
                actividades: [
                    {
                        id: "501",
                        nombre: "Aventuras Extremas (Puentes Colgantes)",
                    },
                    { id: "502", nombre: "CREA y Quiticocha" },
                    { id: "503", nombre: "El Encanto Amazónico" },
                    { id: "504", nombre: "Isla de los Monos" },
                    { id: "505", nombre: "Mariposario" },
                ],
            },
        ];

        const programaSelect = document.getElementById(
            "programaSelect",
        ) as HTMLSelectElement | null;
        const actividadSelect = document.getElementById(
            "actividadSelect",
        ) as HTMLSelectElement | null;
        const nombreInput = document.getElementById(
            "nombres",
        ) as HTMLInputElement | null;
        const fechaIngreso = document.getElementById(
            "fechaIngreso",
        ) as HTMLInputElement | null;
        const fechaSalida = document.getElementById(
            "fechaSalida",
        ) as HTMLInputElement | null;
        const consultarBtn = document.getElementById(
            "consultarBtn",
        ) as HTMLButtonElement | null;

        if (
            !programaSelect ||
            !actividadSelect ||
            !nombreInput ||
            !fechaIngreso ||
            !fechaSalida ||
            !consultarBtn
        ) {
            console.error(
                "Error: No se encontraron los elementos del formulario.",
            );
            return;
        }

        actividadSelect.disabled = true;

        programas.forEach((programa) => {
            const option = document.createElement("option");
            option.value = programa.id;
            option.textContent = programa.nombre;
            programaSelect.appendChild(option);
        });

        programaSelect.addEventListener("change", function () {
            const selectedPrograma = programas.find(
                (p) => p.id === programaSelect.value,
            );

            actividadSelect.innerHTML =
                "<option value=''>Selecciona una actividad</option>";

            if (selectedPrograma) {
                selectedPrograma.actividades.forEach((actividad) => {
                    const option = document.createElement("option");
                    option.value = actividad.id;
                    option.textContent = actividad.nombre;
                    actividadSelect.appendChild(option);
                });
                actividadSelect.disabled = false;
            } else {
                actividadSelect.disabled = true;
            }
        });

        function formatoFecha(fechaStr: string): string {
            if (!fechaStr) return "";

            const meses = [
                "enero",
                "febrero",
                "marzo",
                "abril",
                "mayo",
                "junio",
                "julio",
                "agosto",
                "septiembre",
                "octubre",
                "noviembre",
                "diciembre",
            ];

            const nuevaFecha = new Date(fechaStr);
            if (isNaN(nuevaFecha.getTime())) return "";

            const dia = nuevaFecha.getDate();
            const mes = meses[nuevaFecha.getMonth()];
            const año = nuevaFecha.getFullYear();

            return `${dia} de ${mes} de ${año}`;
        }

        consultarBtn.addEventListener("click", function (event) {
            event.preventDefault();

            const nombre = nombreInput.value.trim();
            const programa =
                programaSelect.options[programaSelect.selectedIndex]?.text ||
                "";
            const actividad =
                actividadSelect.options[actividadSelect.selectedIndex]?.text ||
                "";
            const ingreso = formatoFecha(fechaIngreso.value);
            const salida = formatoFecha(fechaSalida.value);

            if (
                !nombre ||
                !programaSelect.value ||
                !actividadSelect.value ||
                !ingreso ||
                !salida
            ) {
                alert(
                    "Por favor, completa todos los campos antes de continuar.",
                );
                return;
            }

            const mensaje = `Hola, *Iquitos Expedition* me llamo ${nombre} y estoy interesado en el *Programa:* ${programa} con la *Actividad:* ${actividad} del ${ingreso} al ${salida}`;

            const numeroWhatsApp = "51968786482";
            const url = `https://wa.me/${numeroWhatsApp}?text=${encodeURIComponent(mensaje)}`;

            window.open(url, "_blank");
        });
    });
</script>
